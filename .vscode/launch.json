  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Server",
      "program": "${workspaceFolder}/mines-web-node/services/server.js",
      "runtimeArgs": ["--experimental-modules"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "File",
      "program": "${file}",
      "runtimeArgs": ["--experimental-modules"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Game",
      "program": "${workspaceFolder}/tests/game.js",
      "runtimeArgs": ["--experimental-modules"]
    }
  ]
}